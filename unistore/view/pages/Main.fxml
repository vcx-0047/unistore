<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.Cursor?>

<?import javafx.scene.control.*?>
<?import javafx.scene.control.TableView?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="unistore.controller.MainController"
            style="-fx-background-color: #F8F8F8;">

    <!-- Sidebar -->
    <left>
        <VBox spacing="15" alignment="TOP_CENTER" style="-fx-background-color: #E0E0E0; -fx-padding: 20;">
            <Button fx:id="dashboardBtn" text="Dashboard"
                    style="-fx-background-color: transparent; -fx-text-fill: #333333; -fx-font-size: 14; -fx-cursor: pointer;" />
            <Button fx:id="usersBtn"  text="Users"
                    style="-fx-background-color: transparent; -fx-text-fill: #333333; -fx-font-size: 14; -fx-cursor: pointer;" /> 
            <Button fx:id="itemsBtn" text="Items"
                    style="-fx-background-color: transparent; -fx-text-fill: #333333; -fx-font-size: 14; -fx-cursor: pointer;" />
            <Button fx:id="employeesBtn" text="Employees"
                    style="-fx-background-color: transparent; -fx-text-fill: #333333; -fx-font-size: 14; -fx-cursor: pointer;" />
            <Button fx:id="borrowBtn" text="Borrow"
                    style="-fx-background-color: transparent; -fx-text-fill: #333333; -fx-font-size: 14; -fx-cursor: pointer;" />
        </VBox>
    </left>

    <!-- Top bar -->
    <top>
        <HBox spacing="20" alignment="CENTER_LEFT" style="-fx-background-color: #FFFFFF; -fx-padding: 10 20; -fx-border-color: #CCCCCC; -fx-border-width: 0 0 1 0;">
            <Label text="UniStore" style="-fx-text-fill: #333333; -fx-font-size: 18; -fx-font-weight: bold;" />
            <Button text="Logout" fx:id="logoutBtn"
                    style="-fx-background-color: #068FFF; -fx-text-fill: white; -fx-font-weight: bold;" />
        </HBox>
    </top>

    <!-- Center content area -->
    <center>
        <StackPane fx:id="contentStack" style="-fx-background-color: #F8F8F8; -fx-padding: 20;" />
    </center>
</BorderPane>
