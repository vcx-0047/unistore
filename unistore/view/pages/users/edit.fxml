<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx/25" 
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="unistore.controller.EditUserController"
            prefWidth="400" prefHeight="200">

    <children>
        <Label layoutX="20" layoutY="20" text="Username:"/>
        <TextField fx:id="usernameField" layoutX="100" layoutY="20"/>

        <Label layoutX="20" layoutY="60" text="Password:"/>
        <TextField fx:id="passwordField" layoutX="100" layoutY="60"/>

        <Label layoutX="20" layoutY="100" text="Role:"/>
        <TextField fx:id="roleField" layoutX="100" layoutY="100"/>

        <Button text="Save" layoutX="100" layoutY="140" onAction="#saveUser"/>
    </children>
</AnchorPane>
