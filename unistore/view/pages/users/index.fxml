<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx/25" 
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="unistore.controller.UsersController"
            prefWidth="600" prefHeight="400">

    <children>
        <TableView fx:id="usersTable" layoutX="10" layoutY="10" prefWidth="580" prefHeight="380">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
                <TableColumn fx:id="colName" text="Username" prefWidth="150"/>
                <TableColumn fx:id="colAction" text="Action" prefWidth="150"/>
            </columns>
        </TableView>

        <Button fx:id="createUser" layoutX="10" layoutY="400" text="Create"/>
    </children>
</AnchorPane>
